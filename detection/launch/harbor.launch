<launch>
    <arg name="bags_path" doc="path to bag files" default="$(env HOME)/bags" />
    <!-- Docking: 1 | Harbor: 2 | Sea: 3 -->
    <!-- <arg name="phase" default="1"/> -->
    <node pkg="rostopic" type="rostopic" name="phase" args="pub /phase std_msgs/Int8 2"/>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find detection)/rviz/harbor.rviz" required="true"/>
    <node pkg="rosbag" type="play" name="rosbag" args="-l $(args bags_path)/bags/Bags_Velodyne/2017-02-03-11-42-21.bag" required="true"/>

    <node pkg="filtering" type="sensor_filter_node" name="sensor_filter_node" output="screen" required="true"/>
    <node pkg="filtering" type="voxel_filter_node" name="voxel_filter_node" output="screen" required="true"/>
    <node pkg="detection" type="euclideanClusterer_node" name="euclideanClusterer_node" output="screen" required="true"/>
    <node pkg="detection" type="boundingBoxes_node" name="boundingBoxes_node" output="screen" required="true"/>

    <!-- <node pkg="tracking" type="tracking_node" name="tracking_node" required="true">
        <param name="phase" value="$(arg phase)"/>
    </node> -->
</launch>